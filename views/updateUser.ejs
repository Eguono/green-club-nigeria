<% include partial/head %>
    <body id="form_layout">
      <div class="container">
        <div class="row text-center">
          <img class="img-rounded" src="/img/green-club-logo.jpeg" alt="AuthApp Login Image">
          <h2 class="heading text-primary">Green Club Nigeria | Update User</h2>
        </div>
        <div class="row">

          <% if(error) { %>
            <div class = "alert alert-danger alert-dismissable">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= error %>
            </div>
          <% } %>
          <% if(users) { %>
          <form class="form-signin" method='post' action='/updateUser?id=<%= users.userId %>'>
            <!--<a class="btn btn-primary btn-block"><i></i>Register with Facebook</a>
            <a class="btn btn-default btn-block"><i></i>Register with Github</a>-->
            <br>
            <label for="full_name" class="sr-only">Full Name</label>
            <input type="text" id="full_name" name="full_name" class="form-control" value="<%= users.fullName %>" required autofocus>
            <label for="user_name" class="sr-only">User Name</label>
            <input type="text" id="user_name" name="user_name" class="form-control" value="<%= users.displayName %>" required autofocus>
            <!--<label for="photoUrl" class="sr-only">Display Picture</label>
            <input type="photoUrl" id="photoUrl" name="photoUrl" class="form-control" placeholder = "Display picture Url" required autofocus>-->
            <label for="email" class="sr-only">Email address</label>
            <input type="email" id="email" name="email" class="form-control" value="<%= users.email %>" required autofocus>
            <label for="password" class="sr-only">New Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder = "Enter New Password" required autofocus>
            
            <button class="btn btn-primary btn-block" type="submit">Update</button>
            
          </form>
          <% } %>
        </div>
      </div>
      <% include partial/footer %>
    </body>